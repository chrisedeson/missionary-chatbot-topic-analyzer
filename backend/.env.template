# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"

# API Configuration
DEBUG=false
DEV_PASSWORD="your-dev-password-here"
SECRET_KEY="your-secret-key-change-in-production"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSIONS=1536
CHAT_MODEL="gpt-5-nano"

# Analysis Configuration
SIMILARITY_THRESHOLD=0.70
REPRESENTATIVE_QUESTION_METHOD="centroid"
PROCESSING_MODE="sample"
SAMPLE_SIZE=2000
UMAP_N_COMPONENTS=5
MIN_CLUSTER_SIZE=3
RANDOM_SEED=42
CACHE_EMBEDDINGS=true
CACHE_DIR="embeddings_cache"

# Google Service Account Configuration
GOOGLE_SERVICE_ACCOUNT_TYPE="service_account"
GOOGLE_SERVICE_ACCOUNT_PROJECT_ID="your-project-id"
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY_ID="your-private-key-id"
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="your-private-key"
GOOGLE_SERVICE_ACCOUNT_CLIENT_EMAIL="your-service-account-email"
GOOGLE_SERVICE_ACCOUNT_CLIENT_ID="your-client-id"
GOOGLE_SERVICE_ACCOUNT_AUTH_URI="https://accounts.google.com/o/oauth2/auth"
GOOGLE_SERVICE_ACCOUNT_TOKEN_URI="https://oauth2.googleapis.com/token"
GOOGLE_SERVICE_ACCOUNT_AUTH_PROVIDER_CERT_URL="https://www.googleapis.com/oauth2/v1/certs"
GOOGLE_SERVICE_ACCOUNT_CLIENT_CERT_URL="your-client-cert-url"
GOOGLE_SERVICE_ACCOUNT_UNIVERSE_DOMAIN="googleapis.com"

# Google Sheets IDs
QUESTIONS_SHEET_ID="your-questions-sheet-id"
TOPICS_SHEET_ID="your-topics-sheet-id"

# Queue Configuration
REDIS_URL="redis://localhost:6379/0"

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR="uploads"

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
ALLOWED_HOSTS="localhost,127.0.0.1,*"